{{# if orders}}
    <div class="panel panel-default backcolor" >
        <div class="panel-heading">Orders</div>
        <table class="table">
            {{# each orders}}
                <tr style="border-bottom-color: #676864">
                    <td style="padding: 15px !important">
                        <ul class="list-group ">
                            {{# each this.items}}
                                <li class="list-group-item backcolor border">
                                    <span class="label label-info" style="font-size: 18px">{{this.item.title}}</span>
                                </li>
                            {{/each}}
                        </ul>
                    </td>
                    <td style="padding: 15px !important">
                        <ul class="list-group">
                            <li class="list-group-item backcolor border">
                                <span class="label label-danger" style="font-size: 18px">{{this.name}}</span>
                            </li>
                        </ul>
                    </td>
                    <td style="padding: 15px !important">
                        <ul class="list-group">
                            {{# each this.items}}
                                <li class="list-group-item backcolor border">
                                    <span class="label label-success" style="font-size: 18px">{{this.qty}} Units</span>
                                </li>
                            {{/each}}
                        </ul>
                    </td>
                    <td style="padding: 15px !important">
                        <ul class="list-group">
                            {{# each this.items}}
                                <li class="list-group-item backcolor border">
                                    <span class="label label-primary" style="font-size: 18px">${{this.price}}</span>
                                </li>
                            {{/each}}
                        </ul>
                        <div align="right" style="margin-bottom: -15px">
                            <span class="label label-primary" style="font-size: 25px"><strong>Total Price: ${{this.cart.totalPrice}}</strong></span>
                        </div>
                    </td>
                </tr>

            {{/each}}
        </table>
    </div>
{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Orders now</h2>
        </div>
    </div>
    </div>
{{/if}}
