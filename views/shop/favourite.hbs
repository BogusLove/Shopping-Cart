{{# if items}}
    <div class="panel panel-default backcolor" >
        <div class="panel-heading">Favourite</div>
        <table class="table">
            {{# each items}}
                <tr>
                    <td style="padding: 15px !important">
                        <img src="{{this.item.imagePath}}" class="favourite-img">
                    </td>
                    <td style="padding: 15px !important">
                        <span class="label label-info" style="font-size: 18px">{{this.item.title}}</span>
                    </td>
                    <td>
                        <div class="row">
                            <div class="list-group list-group-horizontal">
                                <a href="/remove-from-favourite/{{this._id}}" class="btn btn-primary btn-danger reduce">Remove from Favourite</a>
                                <a href="/add-to-cart/{{this.item._id}}" class="btn btn-primary btn-success remove" style="margin-left: -4px">Add to Shopping Cart</a>
                            </div>
                        </div>
                    </td>
                    <td style="padding: 15px !important">
                        <span class="label label-primary" style="font-size: 18px; ">${{this.item.price}}</span>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
    <br>

{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No items in Favourite</h2>
        </div>
    </div>
    </div>
{{/if}}










