{{# if products}}
    <div class="panel panel-default" style="background: rgba(91,84,79,0.33)">
        <div class="panel-heading">Orders</div>
        <table class="table">
            {{# each products}}
                <tr>
                    <td style="padding: 15px !important">
                        <span class="label label-info" style="font-size: 18px">{{this.item.title}}</span>
                    </td>
                    <td style="padding: 15px !important">
                        <span class="label label-success" style="font-size: 18px">{{this.qty}} units</span>
                    </td>
                    <td>
                        <div class="row">
                            <div class="list-group list-group-horizontal">
                                <a href="/reduce/{{this.item._id}}" class="btn btn-primary btn-warning reduce">Reduce by 1</a>
                                <a href="/remove/{{this.item._id}}" class="btn btn-primary btn-danger remove" style="margin-left: -4px">Remove all</a>
                            </div>
                        </div>
                    <td style="padding: 15px !important">
                        <span class="label label-primary" style="font-size: 18px; ">${{this.price}}</span>
                    </td>
                </tr>
            {{/each}}
        </table>
        <div align="right">
            <span class="label label-primary" style="font-size: 25px"><strong>Total: ${{totalPrice}}</strong></span>
        </div>
    </div>
    <br>
    <div align="right">
        <a href="/checkout"><button class="btn btn-success" type="button"><span style="font-size: 50px"><strong>Checkout</strong></span></button></a>
    </div>

{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No items in Shopping Cart</h2>
        </div>
    </div>
    </div>
{{/if}}



